<?xml version="1.0"?>
<config>
	<app framerate_cap="60">
		<title>D&amp;D: Wrath of Silumgar</title>
		<organization>Triggered Squid</organization>
	</app>
	<renderer>
		<vsync value="true" />
	</renderer>
	<font>
		<default_font file="fonts/FritzQuadrata Regular.ttf" size="12" />
	</font>
	<gui>
		<atlas file="textures/GUI/ui_atlas.png" />
		<button>
			<fx pressed="audio/fx/pressed_btn.wav" released="audio/fx/released_btn.wav" hover="audio/fx/hover_btn.wav" />
		</button>
	</gui>
	<language current="ENG" />
	<window>
		<resolution width="1280" height="1024" scale="2" />
		<fullscreen value="false" />
		<borderless value="false" />
		<resizable value="false" />
		<fullscreen_window value="false" />
	</window>
	<music fx="100" music="6">
		<lvlMusic name="textures/source_spritesheet.png" />
	</music>
	<world_map>
		<spritesheet name="textures/WorldMap/map_spritesheet.png"/>
		<rects>
			<rect name="background" x="0" y="0" width="850" height="480"/>
		</rects>
	</world_map>
	<entities>
		<cleric spritesheetName="textures/Characters/Cleric_sheet.png"/>
		<spritesheetSource name="textures/" />
		<player>
			<fxPlayerJump name="audio/fx/jump_fx.wav" />
			<animations>
				<animation name="down_idle" speed="1.0" loop="true">
					<frame x="2" y="1" width="8" height="29" />
					<frame x="13" y="1" width="8" height="29" />
				</animation>
			</animations>
		</player>
	</entities>
	<file_system>
		<path>data.zip</path>
	</file_system>
	<map>
		<folder>maps/</folder>
		<main_menu />
		<scene>
			<data name="map.tmx" start="false" />
			<animations>
				<animation name="heart_reward_anim" speed="0.12" loop="true">
					<frame x="81" y="419" width="5" height="13" />
					<frame x="86" y="419" width="5" height="13" />
					<frame x="91" y="419" width="5" height="13" />
					<frame x="96" y="419" width="5" height="13" />
					<frame x="101" y="419" width="5" height="13" />
				</animation>
				<animation name="coin_reward_anim" speed="0.5" loop="true">
					<frame x="0" y="433" width="10" height="14" />
					<frame x="32" y="433" width="10" height="14" />
					<frame x="64" y="433" width="10" height="14" />
					<frame x="98" y="433" width="10" height="14" />
				</animation>
				<animation name="one_life_anim" speed="0.1" loop="true">
					<frame x="78" y="366" width="13" height="13" />
					<frame x="99" y="367" width="13" height="13" />
				</animation>
			</animations>
		</scene>
	</map>
</config>
